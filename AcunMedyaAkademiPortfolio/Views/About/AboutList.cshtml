@model List<AcunMedyaAkademiPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Hakkımda ID</th>
        <th>İsim Soyisim</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:180px;height:100px" /></td>
            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkımda Girişi</a>
