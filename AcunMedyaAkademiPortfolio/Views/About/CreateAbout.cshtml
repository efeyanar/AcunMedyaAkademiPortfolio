
@{
    ViewBag.Title = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Ekleme Sayfası</h2>
<form method="post">
    <label>İsim Soyisim</label>
    <input type="text" class="table table-bordered" name="Title" />
    <br />
    <label>Açıklama</label>
    <textarea rows="4" class="table table-bordered" name="Description"></textarea>
    <br />
    <label>Hakkımda Resim Yolu</label>
    <input type="text" class="table table-bordered" name="ImageUrl" />
    <br />
    <button class="btn btn-info">Hakkımdayı Kaydet</button>
</form>

