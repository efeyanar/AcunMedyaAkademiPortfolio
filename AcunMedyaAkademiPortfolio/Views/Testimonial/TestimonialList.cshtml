@model List<AcunMedyaAkademiPortfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referanslar Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Referans Id</th>
        <th>Referans Başlığı</th>
        <th>Referans Açıklaması</th>
        <th>İsim Soyisim</th>
        <th>Resim Yolu</th>
        <th>Meslek</th>
        <th>Statü</th>
        <th>Sil</th>
        <th>Güncelle</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.NameSurname</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:180px;height:100px" /></td>
            <td>@item.Job</td>
            <td>@item.Status</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Testimonial/CreateTestimonial/" class="btn btn-primary">Yeni Referans Girişi</a>

